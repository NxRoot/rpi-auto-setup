#!/bin/bash
root=$1
rpias=$2
value=$3
dir=$(dirname $0)

# Install LCD-SHOW
cd $root
sudo rm -rf LCD-show
git clone https://github.com/goodtft/LCD-show.git
chmod -R 755 LCD-show
cd LCD-show/
sudo ./$value-show

if [ -f "/usr/share/X11/xorg.conf.d/99-fbturbo.conf" ]; then
    sudo mv /usr/share/X11/xorg.conf.d/99-fbturbo.conf ~
fi
