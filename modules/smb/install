#!/bin/bash
root=$1
rpias=$2
value=$3
dir=$(dirname $0)

config=/etc/samba/smb.conf
settings=$dir/_smb.txt

sudo rm -rf $root/shared
mkdir $root/shared
sudo chmod -R 777 $root/shared
sudo apt install -y samba samba-common-bin

source $rpias/core
WRITE_CONFIG "$settings" "$config"
REPLACE_LINE "$config" "/home/pi/shared" "$root/shared"