#!/bin/bash
root=$1
rpias=$2
value=$3
dir=$(dirname $0)
config=/boot/config.txt

if [ "$value" = "on" ]; then
    source $rpias/core
    WRITE_CONFIG "$dir/_on.txt" "$config"

elif [ "$value" = "off" ]; then
    source $rpias/core
    WRITE_CONFIG "$dir/_off.txt" "$config"
else
    exit 0
fi

echo "Config changed at: $config"
echo "Please reboot your device for changes to take effect."
