#!/bin/sh

REPLACE_LINE() {
    file_content=$(<$1)
    file_content=${file_content//$2/$3}
    echo "$file_content" > $1
}

REMOVE_LINE() {
    sudo ex -s +"g/$2/d" -cwq $1
}

RESTORE() {
    if [ -f "$1.orig" ]; then
        sudo cat $1.orig > $1
    fi
    if [ -f "$1" ]; then
        sudo mv $1 $1.orig
    fi
}

WRITE_CONFIG() {
    while read line; do
        REMOVE_LINE "$2" "$line"
    done <$1
    sudo cat $1 >> $2
}